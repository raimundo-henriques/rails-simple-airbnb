<div class="m-5">
  <h1 class="ms-2">All our Flats (<%= @flats.count %>)</h1>
  <div class="row">
    <% @flats.each do |flat| %>
      <div class="col-4 h-50">
        <div class="card mx-2 my-4 bg-light square-card" >
          <img src="<%= flat.picture %>" class="card-img-top" alt="">
          <div class="card-body d-flex flex-column justify-content-between">
            <h5 class="card-title"><%= flat.name %></h5>
            <h6 class="card-subtitle mb-2 text-muted"><%= flat.address %></h6>
            <div class="d-flex">
              <p class="card-text me-2"><i class="fa-solid fa-user-group"></i> <%= flat.number_of_guests %></p>
              <p class="card-text"><i class="fa-solid fa-euro-sign"></i> <%= flat.price_per_night %></p>
            </div>
          </div>
          <div class="bg-white p-3 border-top">
            <%= link_to "More info", flat_path(flat), class:'text-decoration-none' %>
            <%= link_to "Edit", edit_flat_path(flat), class:'text-decoration-none text-warning mx-3' %>
            <%= link_to "Delete", flat_path(flat), method: :delete, data: {confirm: "Delete #{flat.name}?"}, class:'text-decoration-none text-danger' %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
